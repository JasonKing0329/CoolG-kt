<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.king.app.coolg_kt.page.match.item.MatchViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/group_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:background="@color/white">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Match"
                app:contentScrim="@color/actionbar_bg"
                app:scrimVisibleHeightTrigger="100dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/img_height_in_full_screen_std"
                        android:scaleType="fitXY"
                        app:recordUrl="@{model.matchImage}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:shadowColor="#000000"
                        android:shadowRadius="10"
                        android:text="@{model.matchName}"
                        app:layout_constraintStart_toStartOf="@id/iv_head"
                        app:layout_constraintEnd_toEndOf="@id/iv_head"
                        app:layout_constraintTop_toTopOf="@id/iv_head"
                        app:layout_constraintBottom_toBottomOf="@id/iv_head"
                        tools:text="Lucas Entertainment "/>

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_f1303d"
                        android:textSize="20dp"
                        android:textStyle="bold|italic"
                        android:shadowColor="#000000"
                        android:shadowRadius="10"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="@{model.matchLevel}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/iv_head"
                        tools:text="GM1000 "/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/actionbar_height"
                    app:title="Glory"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/CustomActionBarTheme.PopupOverlay"
                    app:contentInsetStart="0dp"
                    app:contentInsetLeft="0dp">
                    <com.king.app.jactionbar.JActionbar
                        android:id="@+id/actionbar"
                        style="@style/CommonJActionBar"
                        android:layout_width="match_parent"
                        app:title="Match"
                        app:menu="@menu/match_score"
                        android:background="#00000000"/>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/tv_timeline"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Time line"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@drawable/selector_studio_tag_text"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_count"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Count"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@drawable/selector_studio_tag_text"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toEndOf="@+id/tv_timeline"
                app:layout_constraintEnd_toStartOf="@+id/tv_round"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_round"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Round"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@drawable/selector_studio_tag_text"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toEndOf="@+id/tv_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_timeline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/adapter_match_rank"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
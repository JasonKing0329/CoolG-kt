<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.king.app.jactionbar.JActionbar
            android:id="@+id/actionbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/actionbar_bg"
            android:theme="@style/EtActionSearch"
            app:actionTextColor="@color/actionbar_element"
            app:iconColor="@color/actionbar_element"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:maxShowIcon="5"
            app:showIconBack="true"
            app:supportSearch="true"
            app:iconSize="@dimen/actionbar_icon_width"
            app:iconPadding="@dimen/actionbar_icon_padding"
            app:titleSize="@dimen/actionbar_title_text_size"
            app:title="Select Star"
            app:titleColor="@color/actionbar_element" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_studio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/actionbar"/>

        <com.king.app.coolg_kt.view.widget.FitSideBar
            android:id="@+id/sidebar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="#99ffffff"
            android:elevation="10dp"
            android:visibility="gone"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rv_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:minWidth="32dp"
            app:textColor="@color/colorPrimary"
            app:textColorFocus="@color/colorAccent"
            app:textSize="14dp"
            app:textSizeFocus="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_star"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sidebar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_studio"
            tools:listitem="@layout/adapter_star_rich"/>

        <TextView
            android:id="@+id/tv_index_popup"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_sidebar_popup_bk"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:visibility="gone"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_search"
            android:layout_width="@dimen/gdb_home_icon_size"
            android:layout_height="@dimen/gdb_home_icon_size"
            android:layout_marginStart="@dimen/common_margin_8"
            android:layout_marginBottom="@dimen/common_margin_8"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_search_white"
            android:tint="@color/white"
            app:fabCustomSize="@dimen/gdb_home_icon_size"
            app:borderWidth="0dp"
            app:rippleColor="@color/actionbar_bk_blue"
            app:useCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/fab_search"
            app:layout_constraintTop_toTopOf="@+id/fab_search"
            app:layout_constraintBottom_toBottomOf="@+id/fab_search"
            tools:visibility="visible">
            <EditText
                android:id="@+id/et_search"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_floating_input"
                android:maxLines="1"
                android:paddingRight="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/iv_close_search"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_close_3f51b5_24dp"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="@dimen/common_margin_8"
                app:layout_constraintEnd_toEndOf="@id/et_search"
                app:layout_constraintTop_toTopOf="@id/et_search"
                app:layout_constraintBottom_toBottomOf="@id/et_search"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.king.app.coolg_kt.page.tv.player.SystemPlayerViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <com.king.app.coolg_kt.view.widget.video.TvVideoView
            android:id="@+id/video_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/iv_back"
                style="@style/IvVideoIconTv"
                android:src="@drawable/ic_back_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/common_margin_16"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_common_16"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_back"
                app:layout_constraintTop_toTopOf="@+id/iv_back"
                app:layout_constraintBottom_toBottomOf="@+id/iv_back"
                tools:text="Url path"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33000000"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_common_16"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/common_margin_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seek_progress"
                app:layout_constraintBottom_toBottomOf="@+id/seek_progress"
                tools:text="00:00:00"/>

            <SeekBar
                android:id="@+id/seek_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:thumb="@drawable/video_seek_thumb"
                android:layout_marginStart="@dimen/common_margin_10"
                android:layout_marginEnd="@dimen/common_margin_10"
                android:layout_marginTop="@dimen/common_margin_16"
                app:layout_constraintStart_toEndOf="@+id/current"
                app:layout_constraintEnd_toStartOf="@+id/total"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_common_16"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/common_margin_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seek_progress"
                app:layout_constraintBottom_toBottomOf="@+id/seek_progress"/>

            <ImageView
                android:id="@+id/iv_setting"
                style="@style/IvVideoIconTv"
                android:src="@drawable/ic_settings_white_36dp"
                android:layout_marginStart="@dimen/common_margin_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/start"/>

            <TextView
                android:id="@+id/tv_from_start"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tv_video_player_icon_size"
                android:text="从头播放"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_common_16"
                android:paddingLeft="@dimen/common_margin_16"
                android:paddingRight="@dimen/common_margin_16"
                android:layout_marginStart="@dimen/common_margin_16"
                android:focusable="true"
                android:background="@drawable/selector_border"
                app:layout_constraintTop_toTopOf="@+id/start"
                app:layout_constraintStart_toEndOf="@+id/iv_setting"/>

            <ImageView
                android:id="@+id/app_video_last"
                style="@style/IvVideoIconTv"
                android:src="@drawable/video_btn_prev_mtrl"
                android:layout_marginEnd="@dimen/common_margin_16"
                app:layout_constraintEnd_toStartOf="@+id/start"
                app:layout_constraintTop_toTopOf="@+id/start"/>

            <ImageView
                android:id="@+id/start"
                style="@style/IvVideoIconTv"
                android:src="@drawable/ic_play_arrow_white_24dp"
                android:layout_marginTop="@dimen/common_margin_10"
                android:layout_marginBottom="@dimen/common_margin_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seek_progress"/>

            <ImageView
                android:id="@+id/app_video_next"
                style="@style/IvVideoIconTv"
                android:src="@drawable/video_btn_next_mtrl"
                android:layout_marginStart="@dimen/common_margin_16"
                app:layout_constraintStart_toEndOf="@+id/start"
                app:layout_constraintTop_toTopOf="@+id/start"/>

            <TextView
                android:id="@+id/tv_scale"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tv_video_player_icon_size"
                android:text="调整比例"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_common_16"
                android:paddingLeft="@dimen/common_margin_16"
                android:paddingRight="@dimen/common_margin_16"
                android:layout_marginEnd="@dimen/common_margin_16"
                android:focusable="true"
                android:background="@drawable/selector_border"
                app:layout_constraintTop_toTopOf="@+id/start"
                app:layout_constraintEnd_toStartOf="@+id/app_video_list"/>

            <ImageView
                android:id="@+id/app_video_list"
                style="@style/IvVideoIconTv"
                android:src="@drawable/ic_playlist_play_white_24dp"
                android:layout_marginEnd="@dimen/common_margin_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/start" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Jzvd id, don't modify -->
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="@dimen/video_loading_size"
            android:layout_height="@dimen/video_loading_size"
            android:indeterminateDrawable="@drawable/jz_loading"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.avery.subtitle.widget.SimpleSubtitleView
            android:id="@+id/subtitle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textSize="26dp"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_socket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_common_16"
            android:visibility="@{model.ipInfoVisibility}"
            android:text="@{model.ipInfoText}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="本机IP：192.168.0.0\n端口号：8080"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
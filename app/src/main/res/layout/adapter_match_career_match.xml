<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="bean"
            type="com.king.app.coolg_kt.page.match.CareerMatch" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="16dp"
            android:textColor="@color/text_normal"
            android:layout_marginTop="8dp"
            android:text="@{bean.week}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="W35"/>
        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{bean.level}"
            android:textSize="16dp"
            android:textColor="@color/match_level_gs"
            app:layout_constraintStart_toEndOf="@+id/tv_week"
            app:layout_constraintTop_toTopOf="@+id/tv_week"
            tools:text="GM1000"/>
        <TextView
            android:id="@+id/tv_draws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{bean.draws}"
            android:textSize="16dp"
            android:textColor="@color/text_sub"
            app:layout_constraintStart_toEndOf="@+id/tv_level"
            app:layout_constraintTop_toTopOf="@+id/tv_week"
            tools:text="(128 Draws)"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_second"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:text="@{bean.name}"
            app:layout_constraintStart_toStartOf="@+id/tv_week"
            app:layout_constraintTop_toBottomOf="@+id/tv_week"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Lucas Entertainment"/>
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="20dp"
            android:textColor="@color/text_second"
            android:textStyle="bold"
            android:text="@{bean.result}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Final"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
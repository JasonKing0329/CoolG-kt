<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_second"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text=" Lucas Entertainment " />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textColor="@color/text_second"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            tools:text="W16" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/red_f1303d"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:text=" GM1000 " />

        <TextView
            android:id="@+id/tv_times_num"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:gravity="center"
            android:background="@drawable/shape_oval_index"
            app:layout_constraintEnd_toStartOf="@+id/tv_times"
            app:layout_constraintTop_toTopOf="@+id/tv_times"
            app:layout_constraintBottom_toBottomOf="@+id/tv_times"
            tools:text="17" />

        <TextView
            android:id="@+id/tv_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_second"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_week"
            app:layout_constraintTop_toTopOf="@+id/tv_level"
            app:layout_constraintBottom_toBottomOf="@+id/tv_level"
            tools:text="times in" />

        <TextView
            android:id="@+id/tv_win_lose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_sub"
            android:textSize="14dp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/tv_best"
            app:layout_constraintBottom_toBottomOf="@+id/tv_best"
            tools:text=" 32胜7负 " />

        <TextView
            android:id="@+id/tv_best"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_sub"
            android:textSize="12dp"
            android:gravity="right"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_week"
            app:layout_constraintStart_toEndOf="@+id/tv_win_lose"
            app:layout_constraintTop_toBottomOf="@+id/tv_times_num"
            tools:text="Win(P3,P5), SF(P4,P6), R128(P1,P2,P7,P9)" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_index1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1\n[32]"/>
        <ImageView
            android:id="@+id/iv_player1"
            android:layout_width="140dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toEndOf="@+id/tv_index1"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/def_small"/>
        <TextView
            android:id="@+id/tv_index2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_player2"
            tools:text="2"/>
        <ImageView
            android:id="@+id/iv_player2"
            android:layout_width="140dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toEndOf="@+id/tv_index2"
            app:layout_constraintTop_toBottomOf="@+id/iv_player1"
            tools:src="@drawable/def_small"/>
        <ImageView
            android:id="@+id/iv_winner"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@+id/iv_player1"
            app:layout_constraintBottom_toBottomOf="@+id/iv_player2"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/def_small"/>
        <ImageView
            android:id="@+id/iv_path"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="@+id/iv_player1"
            app:layout_constraintBottom_toBottomOf="@+id/iv_player2"
            app:layout_constraintEnd_toStartOf="@+id/iv_winner"
            app:layout_constraintStart_toEndOf="@+id/iv_player1"
            tools:src="@drawable/ic_up_path"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
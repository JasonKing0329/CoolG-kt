<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.king.app.coolg_kt.view.widget.ScaleImageView
            android:id="@+id/iv_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:ratioWidth="16"
            app:ratioHeight="9"
            tools:src="@drawable/def_small" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            app:layout_constraintStart_toStartOf="@+id/iv_record"
            app:layout_constraintTop_toTopOf="@+id/iv_record"
            tools:text="R 14 " />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_record"
            app:layout_constraintStart_toStartOf="@+id/iv_record"
            app:layout_constraintTop_toBottomOf="@+id/iv_record"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="TextView" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:padding="4dp"
            android:textColor="@color/white"
            android:background="#66000000"
            app:layout_constraintEnd_toEndOf="@+id/iv_record"
            app:layout_constraintStart_toStartOf="@+id/iv_record"
            app:layout_constraintBottom_toBottomOf="@id/iv_record"
            tools:text=" GS(3) GM1000(5) GM500(7) GM250(12) LOW(3)" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
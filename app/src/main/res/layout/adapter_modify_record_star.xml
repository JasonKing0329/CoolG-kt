<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="bean"
            type="com.king.app.coolg_kt.model.http.bean.request.RecordUpdateStarItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_margin_10">
        <com.king.app.coolg_kt.view.widget.rc.RCImageView
            android:id="@+id/iv_star"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_def_person"
            app:round_corner="10dp"
            app:starUrl="@{bean.imageUrl}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_delete_grey_600_24dp"
            app:layout_constraintEnd_toEndOf="@id/iv_star"
            app:layout_constraintTop_toTopOf="@id/iv_star"/>
        <com.king.app.coolg_kt.view.widget.KeyValueEditView
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:kv_inputWidth="110dp"
            app:kv_inputTextSize="@dimen/text_common_12"
            app:layout_constraintTop_toBottomOf="@id/iv_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.king.app.coolg_kt.view.widget.KeyValueEditView
            android:id="@+id/et_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:kv_keyText="Score"
            app:kv_keyTextSize="@dimen/text_common_12"
            app:kv_inputTextSize="@dimen/text_common_12"
            app:kv_inputWidth="50dp"
            app:layout_constraintTop_toBottomOf="@id/et_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.king.app.coolg_kt.view.widget.KeyValueEditView
            android:id="@+id/et_scoreC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:kv_keyText="ScoreC"
            app:kv_keyTextSize="@dimen/text_common_12"
            app:kv_inputTextSize="@dimen/text_common_12"
            app:kv_inputWidth="50dp"
            app:layout_constraintTop_toBottomOf="@id/et_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
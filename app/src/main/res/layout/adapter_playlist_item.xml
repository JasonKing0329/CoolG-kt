<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>
        <import type="com.king.app.coolg_kt.utils.FormatUtil"/>
        <variable
            name="bean"
            type="com.king.app.coolg_kt.model.bean.PlayList.PlayItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="@dimen/video_player_list_thumb_width"
            android:layout_height="@dimen/video_player_list_thumb_height"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            app:recordUrl="@{bean.imageUrl}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:text="@{TextUtils.isEmpty(bean.name) ? bean.url:bean.name}"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_thumb"
            tools:text="sagjoiaejgdasklbvksjaoiewjgioaejwgsdkljagaoiewjgoijsdjlgjaewoijboidnssagjoiaejgdasklbvksjaoiewjgioaejwgsdkljagaoiewjgoijsdjlgjaewoijboidns"/>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/video_player_close_size"
            android:layout_height="@dimen/video_player_close_size"
            android:padding="@dimen/video_player_close_padding"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_delete_white_36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv_thumb"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@{FormatUtil.formatTime(bean.duration)}"
            android:visibility="@{bean.duration > 0 ? View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_delete"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/iv_delete"
            tools:text="01:16:00" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
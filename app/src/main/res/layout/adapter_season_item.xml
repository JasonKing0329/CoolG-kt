<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="bean"
            type="com.king.app.gdb.data.relation.MatchPeriodWrap" />
    </data>
    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_edit"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#B83131">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit_white_36dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#21BD86">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete_white_36dp"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_group"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white">

            <com.king.app.coolg_kt.view.widget.rc.RCImageView
                android:id="@+id/iv_img"
                android:layout_width="150dp"
                android:layout_height="84dp"
                android:layout_marginStart="@dimen/common_margin_8"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:round_corner="4dp"/>

            <TextView
                android:id="@+id/tv_index"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shape_oval_dynamic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="W37"/>

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold|italic"
                android:textColor="@color/red_f1303d"
                android:layout_marginStart="@dimen/common_margin_8"
                app:layout_constraintStart_toEndOf="@id/iv_img"
                app:layout_constraintTop_toTopOf="@id/iv_img"
                tools:text="Grand Slam" />

            <TextView
                android:id="@+id/tv_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="@{bean.match.name}"
                app:layout_constraintStart_toStartOf="@id/tv_level"
                app:layout_constraintTop_toBottomOf="@id/tv_level"
                tools:text="Match Name" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score √"
                android:textColor="@color/red_f1303d"
                android:textSize="10dp"
                android:visibility="@{bean.bean.scoreCreated ? View.VISIBLE : View.GONE}"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_level"
                app:layout_constraintStart_toEndOf="@+id/tv_level" />

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Rank √"
                android:textColor="@color/red_f1303d"
                android:textSize="10dp"
                android:visibility="@{bean.bean.rankCreated ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toEndOf="@+id/tv_score"
                app:layout_constraintTop_toTopOf="@+id/tv_score" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/text_sub"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/common_margin_8"
                app:layout_constraintStart_toStartOf="@id/tv_level"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_match"
                tools:text="Draws(128), Bye(32), Q(16), WC(M-2, Q-4)" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.daimajia.swipe.SwipeLayout>
</layout>
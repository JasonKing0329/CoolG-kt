<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout style="@style/GroupWhiteSecBg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/group_tags"
                style="@style/GroupStarSecItem"
                android:background="?android:attr/selectableItemBackground">
                <TextView
                    android:id="@+id/tv_tags_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Tags"
                    android:textColor="@color/text_sub"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_tag_delete"/>
                <ImageView
                    android:id="@+id/iv_tag_delete"
                    style="@style/IvRecordLineIcon"
                    android:visibility="gone"
                    android:src="@drawable/ic_delete_grey_600_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_tag_add" />
                <ImageView
                    android:id="@+id/iv_tag_add"
                    style="@style/IvRecordLineIcon"
                    android:src="@drawable/ic_add_grey_600_48dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_divider"
                android:background="@color/divider" />
            <RelativeLayout
                android:id="@+id/group_rating"
                style="@style/GroupStarSecItem"
                android:background="?android:attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Rating"/>
                <ImageView
                    android:id="@+id/iv_rating_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_keyboard_arrow_down_grey_700_24dp"/>
                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_rating_arrow"
                    android:layout_centerVertical="true"
                    android:text="A+(4.66)"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/group_rating_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout style="@style/GroupStarSecSubItem">
                    <TextView
                        android:text="Face"
                        style="@style/TvPlayerStarValueStarPage" />
                    <com.king.app.coolg_kt.view.widget.StarRatingView
                        android:id="@+id/star_face"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starNumber="5"
                        app:checkNumber="0"
                        app:starSize="@dimen/rating_star_size"
                        app:starSpace="@dimen/rating_star_space"
                        app:starColor="@color/colorAccent"
                        app:supportHalf="true"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_face"
                        android:text="NR"
                        style="@style/TvPlayerValueStarPage" />
                </LinearLayout>
                <LinearLayout style="@style/GroupStarSecSubItem">
                    <TextView
                        android:text="Body"
                        style="@style/TvPlayerStarValueStarPage" />
                    <com.king.app.coolg_kt.view.widget.StarRatingView
                        android:id="@+id/star_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starNumber="5"
                        app:starSize="@dimen/rating_star_size"
                        app:starSpace="@dimen/rating_star_space"
                        app:checkNumber="0"
                        app:starColor="@color/colorAccent"
                        app:supportHalf="true"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_body"
                        android:text="NR"
                        style="@style/TvPlayerValueStarPage" />
                </LinearLayout>
                <LinearLayout style="@style/GroupStarSecSubItem">
                    <TextView
                        android:text="Dk/Butt"
                        style="@style/TvPlayerStarValueStarPage" />
                    <com.king.app.coolg_kt.view.widget.StarRatingView
                        android:id="@+id/star_dk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starNumber="5"
                        app:starSize="@dimen/rating_star_size"
                        app:starSpace="@dimen/rating_star_space"
                        app:checkNumber="0"
                        app:starColor="@color/colorAccent"
                        app:supportHalf="true"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_dk"
                        android:text="NR"
                        style="@style/TvPlayerValueStarPage" />
                </LinearLayout>
                <LinearLayout style="@style/GroupStarSecSubItem">
                    <TextView
                        android:text="Sexy"
                        style="@style/TvPlayerStarValueStarPage" />
                    <com.king.app.coolg_kt.view.widget.StarRatingView
                        android:id="@+id/star_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starNumber="5"
                        app:starSize="@dimen/rating_star_size"
                        app:starSpace="@dimen/rating_star_space"
                        app:checkNumber="0"
                        app:starColor="@color/colorAccent"
                        app:supportHalf="true"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_sex"
                        android:text="NR"
                        style="@style/TvPlayerValueStarPage" />
                </LinearLayout>
                <LinearLayout style="@style/GroupStarSecSubItem">
                    <TextView
                        android:text="Passion"
                        style="@style/TvPlayerStarValueStarPage" />
                    <com.king.app.coolg_kt.view.widget.StarRatingView
                        android:id="@+id/star_passion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starNumber="5"
                        app:starSize="@dimen/rating_star_size"
                        app:starSpace="@dimen/rating_star_space"
                        app:checkNumber="0"
                        app:starColor="@color/colorAccent"
                        app:supportHalf="true"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_passion"
                        android:text="NR"
                        style="@style/TvPlayerValueStarPage" />
                </LinearLayout>
                <LinearLayout style="@style/GroupStarSecSubItem">
                    <TextView
                        android:text="Video"
                        style="@style/TvPlayerStarValueStarPage" />
                    <com.king.app.coolg_kt.view.widget.StarRatingView
                        android:id="@+id/star_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starNumber="5"
                        app:starSize="@dimen/rating_star_size"
                        app:starSpace="@dimen/rating_star_space"
                        app:checkNumber="0"
                        app:starColor="@color/colorAccent"
                        app:supportHalf="true"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_video"
                        android:text="NR"
                        style="@style/TvPlayerValueStarPage" />
                </LinearLayout>
                <LinearLayout style="@style/GroupStarSecSubItem">
                    <TextView
                        android:text="Prefer"
                        style="@style/TvPlayerStarValueStarPage" />
                    <com.king.app.coolg_kt.view.widget.StarRatingView
                        android:id="@+id/star_prefer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starNumber="5"
                        app:starSize="@dimen/rating_star_size"
                        app:starSpace="@dimen/rating_star_space"
                        app:checkNumber="0"
                        app:starColor="@color/colorAccent"
                        app:supportHalf="true"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_prefer"
                        android:text="NR"
                        style="@style/TvPlayerValueStarPage" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_divider"
                android:background="@color/divider" />
            <RelativeLayout
                android:id="@+id/group_relation"
                style="@style/GroupStarSecItem"
                android:background="?android:attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Relationships"/>
                <ImageView
                    android:id="@+id/iv_relation_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_keyboard_arrow_down_grey_700_24dp"/>
                <TextView
                    android:id="@+id/tv_relation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_relation_arrow"
                    android:layout_centerVertical="true"
                    android:text="1人"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                tools:listitem="@layout/adapter_star_relationships"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_divider"
                android:background="@color/divider" />
            <RelativeLayout
                android:id="@+id/group_order"
                style="@style/GroupStarSecItem"
                android:background="?android:attr/selectableItemBackground">
                <TextView
                    android:id="@+id/iv_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Orders"/>
                <ImageView
                    android:id="@+id/iv_order_add"
                    android:layout_width="@dimen/gdb_record_line_height"
                    android:layout_height="@dimen/gdb_record_line_height"
                    android:padding="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_order_title"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_add_grey_600_48dp"/>
                <ImageView
                    android:id="@+id/iv_order_delete"
                    android:layout_width="@dimen/gdb_record_line_height"
                    android:layout_height="@dimen/gdb_record_line_height"
                    android:padding="12dp"
                    android:layout_toRightOf="@id/iv_order_add"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_delete_grey_600_24dp"/>
                <ImageView
                    android:id="@+id/iv_order_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_keyboard_arrow_down_grey_700_24dp"/>
                <TextView
                    android:id="@+id/tv_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_order_arrow"
                    android:layout_centerVertical="true"
                    android:text="0"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                tools:listitem="@layout/adapter_star_orders"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_divider"
                android:background="@color/divider" />
            <RelativeLayout
                style="@style/GroupStarSecItem"
                android:background="?android:attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Studios"/>
                <TextView
                    android:id="@+id/tv_studio_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <com.king.app.coolg_kt.view.widget.flow.FlowLayout
                android:id="@+id/flow_studios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
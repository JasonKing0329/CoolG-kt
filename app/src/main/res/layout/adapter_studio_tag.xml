<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="@dimen/tag_padding_hor"
    android:paddingBottom="@dimen/tag_padding_hor">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tag_height"
        android:paddingLeft="@dimen/tag_padding_hor"
        android:paddingRight="@dimen/tag_padding_hor"
        android:textColor="@drawable/selector_studio_tag_text"
        android:background="@drawable/selector_studio_tag_bg"
        android:textSize="@dimen/tag_text"
        android:gravity="center"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/group_dialog"
        android:background="@drawable/shape_dialog_tv_bg">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18dp"
            android:textColor="@color/tv_dlg_title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_close"
            app:layout_constraintBottom_toBottomOf="@+id/iv_close"/>
        <ImageView
            android:id="@+id/iv_close"
            style="@style/IvDialogIconTv"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_close_white_36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <FrameLayout
            android:id="@+id/fl_ft"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/tv_title"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/iv_close"
            app:layout_constraintBottom_toTopOf="@+id/tv_ok"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_tv_btn_bg"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:text="取消"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_ok"
            app:layout_constraintTop_toTopOf="@+id/tv_ok"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ok" />
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/selector_tv_btn_bg"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="确定"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/tv_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
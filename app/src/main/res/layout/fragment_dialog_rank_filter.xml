<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_level_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Level count between"
            app:layout_constraintBottom_toBottomOf="@+id/et_min"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_min" />

        <EditText
            android:id="@+id/et_min"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/tv_level_title"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_max"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/et_min"
            app:layout_constraintBottom_toBottomOf="@+id/et_min"
            app:layout_constraintTop_toTopOf="@+id/et_min" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/ok"
            app:layout_constraintBottom_toBottomOf="@+id/et_min"
            app:layout_constraintStart_toEndOf="@+id/et_max"
            app:layout_constraintTop_toTopOf="@+id/et_min" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_min"
            tools:listitem="@layout/adapter_match_rank"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_dim">

        <TextView
            android:id="@+id/tv_champion"
            style="@style/TvTagPeriod"
            android:layout_marginTop="12dp"
            android:text="Champion"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ru"
            style="@style/TvTagPeriod"
            android:text="Runner-up"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/tv_champion"
            app:layout_constraintTop_toTopOf="@+id/tv_champion" />

        <TextView
            android:id="@+id/tv_per_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="16dp"
            android:textColor="@color/text_second"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_champion"
            app:layout_constraintEnd_toStartOf="@+id/tv_rate"
            app:layout_constraintTop_toTopOf="@+id/tv_champion"
            tools:text="23/33" />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="16dp"
            android:textColor="@color/text_second"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_champion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_champion"
            tools:text="56.3%" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_champion"
            tools:listitem="@layout/adapter_match_champion_level"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_level"
            tools:listitem="@layout/adapter_match_detail_champion" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white_dim">
        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/GroupRecordModify">
            <TextView
                android:text=" Basic "
                style="@style/TvRecordModifyTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <CheckBox
                android:id="@+id/cb_deprecated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deprecated"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/ll_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/GroupRecordModify"
            android:paddingRight="3dp">
            <TextView
                android:text=" Cast "
                style="@style/TvRecordModifyTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/iv_delete_cast"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="@dimen/actionbar_height"
                android:padding="13dp"
                android:src="@drawable/ic_delete_grey_600_24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toStartOf="@+id/iv_add_cast"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/iv_add_cast"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="@dimen/actionbar_height"
                android:padding="13dp"
                android:src="@drawable/ic_add_grey_600_36dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginTop="10dp"
            tools:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/GroupRecordModify"
            android:layout_marginTop="10dp">
            <TextView
                android:text=" Type "
                style="@style/TvRecordModifyTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <Spinner
                android:id="@+id/sp_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/record_modify_types"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/ll_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_margin_16"/>
        <!-- 在父布局NestedScrollView的包裹下，最后会有大概30dp超出可滚动范围导致无法看见，所以用一个50dp的距离占空间保证正常内容能全部被看见 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
</layout>
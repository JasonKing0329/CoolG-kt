<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--加载中对话框-->
    <declare-styleable name="CircularProgress">
        <attr name="borderWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="StarRatingView">
        <attr name="starSize" format="dimension" />
        <attr name="starColor" format="color" />
        <attr name="starPadding" format="dimension" />
        <attr name="starSpace" format="dimension" />
        <attr name="supportHalf" format="boolean" />
        <attr name="starNumber" format="integer" />
        <attr name="checkNumber" format="float" />
    </declare-styleable>

    <declare-styleable name="CoverView">
        <attr name="coverRadius" format="dimension" />
        <attr name="coverSrc" format="reference" />
        <attr name="coverText" format="string" />
        <attr name="coverTextBackgroundColor" format="color" />
        <attr name="coverTextColor" format="color" />
        <attr name="coverTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ScaleImageView">
        <attr name="ratioWidth" format="integer"/>
        <attr name="ratioHeight" format="integer"/>
        <attr name="baseOnHeight" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PointListView">
        <attr name="pointSize" format="dimension" />
        <attr name="pointMargin" format="dimension" />
        <attr name="pointTextSize" format="dimension" />
        <attr name="resizeWhenOver" format="boolean" />
    </declare-styleable>

    <!-- 流式布局 -->
    <declare-styleable name="FlowLayout">
        <attr name="android:orientation" />
        <attr name="layoutDirection" format="enum">
            <enum name="ltr" value="0"/>
            <enum name="rtl" value="1"/>
        </attr>
        <attr name="debugDraw" format="boolean"/>
        <attr name="weightDefault" format="float" />
        <attr name="android:gravity"/>
    </declare-styleable>
    <declare-styleable name="FlowLayout_LayoutParams">
        <attr name="layout_newLine" format="boolean"/>
        <attr name="layout_weight" format="float"/>
        <attr name="android:layout_gravity"/>
    </declare-styleable>

    <declare-styleable name="FitSideBar">
        <attr name="android:gravity" />
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColorFocus" format="color"/>
        <attr name="textSizeFocus" format="dimension"/>
        <attr name="minHorizontalPadding" format="dimension"/>
        <attr name="minWidth" format="dimension"/>
        <attr name="maxWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LineChart">
        <attr name="minXCellWidth" format="dimension" />
        <attr name="normalXCellWidth" format="dimension" />
        <attr name="valueTextColor" format="color" />
        <attr name="valueTextSize" format="dimension" />
        <attr name="lineColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AxisChart">
        <attr name="axisXExtendLineWidth" format="dimension" />
        <attr name="axisXTextSize" format="dimension" />
        <attr name="axisYTextSize" format="dimension" />
        <attr name="axisYTextWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PageIndicator">
        <attr name="pi_textSize" format="dimension" />
        <attr name="pi_textColor" format="color" />
        <attr name="pi_itemWidth" format="dimension" />
        <attr name="pi_itemBackground" format="reference" />
        <attr name="pi_itemMargin" format="dimension" />
        <attr name="pi_maxPage" format="integer" />
    </declare-styleable>

</resources>
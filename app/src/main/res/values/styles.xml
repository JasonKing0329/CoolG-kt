<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomActionBarTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/white_dim</item>
        <item name="colorPrimaryDark">@color/white_dim</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#eeeeee</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="CustomActionBarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <!--透明Dialog-->
    <style name="BaseDialogFragment" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BASEDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/grayef</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoadingDialog" parent="BASEDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BaseJActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:theme">@style/EtActionSearch</item>
        <item name="android:background">@color/actionbar_bg</item>
        <item name="actionTextColor">@color/actionbar_element</item>
        <item name="iconColor">@color/actionbar_element</item>
        <item name="iconSize">@dimen/actionbar_icon_width</item>
        <item name="iconPadding">@dimen/actionbar_icon_padding</item>
        <item name="titleSize">@dimen/actionbar_title_text_size</item>
        <item name="titleColor">@color/actionbar_element</item>
    </style>

    <style name="CommonJActionBar" parent="BaseJActionBar">
        <item name="maxShowIcon">5</item>
        <item name="showIconBack">true</item>
    </style>

    <style name="TvLoginItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/text_second</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="IvLoginItemArrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="IvDialogIcon">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="EtActionSearch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/actionbar_element</item>
        <item name="colorControlActivated">@color/actionbar_element</item>
    </style>

    <style name="TvDialogConfirmBase">
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TvDialogConfirm" parent="TvDialogConfirmBase">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="IvVideoIcon">
        <item name="android:layout_width">@dimen/video_player_icon_size</item>
        <item name="android:layout_height">@dimen/video_player_icon_size</item>
        <item name="android:padding">@dimen/video_player_icon_padding</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="GroupWhiteSecBg">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="GroupWhiteSecOnBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="GroupStarSecItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/gdb_record_line_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="IvRecordLineIcon">
        <item name="android:layout_width">@dimen/record_line_icon_size</item>
        <item name="android:layout_height">@dimen/record_line_icon_size</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TvVideoPlayerListTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/selector_video_player_title_text</item>
        <item name="android:textSize">@dimen/video_player_list_title_size</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="GroupStarSecSubItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TvPlayerStarValueStarPage">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TvPlayerValueStarPage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="TvStarRating">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/shape_oval_index</item>
    </style>

    <style name="TvStarRatingNoWH">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/shape_oval_index</item>
    </style>

    <style name="GroupPlayerStar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/rating_item_top</item>
    </style>

    <style name="TvPlayerStarTitle">
        <item name="android:layout_width">@dimen/rating_title_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/rating_margin_hor</item>
        <item name="android:textSize">@dimen/rating_title_size</item>
        <item name="android:textColor">@color/text_sub</item>
    </style>

    <style name="TvPlayerStarValue">
        <item name="android:layout_width">@dimen/rating_value_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/rating_title_size</item>
        <item name="android:textColor">@color/text_sub</item>
    </style>

    <style name="TvHomeMenuItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/home_menu_text</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_marginStart">@dimen/home_menu_text_left</item>
        <item name="android:layout_marginEnd">@dimen/home_menu_height</item>
    </style>

    <style name="TvSectionTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_right_grey_700_24dp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/text_common_14</item>
    </style>

    <style name="CoverViewOrder">
        <item name="android:layout_width">@dimen/video_home_cover_width</item>
        <item name="android:layout_height">@dimen/video_home_cover_height</item>
        <item name="coverTextColor">@color/white</item>
        <item name="coverTextSize">@dimen/text_common_14</item>
        <item name="coverTextBackgroundColor">#33000000</item>
        <item name="coverRadius">8dp</item>
    </style>

    <style name="IvRandomAction">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:padding">9dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TvDrawIndex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@color/text_sub</item>
    </style>

    <style name="TvDrawSeed">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red_f1303d</item>
    </style>

    <style name="TvDrawQ">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_second</item>
    </style>

    <style name="TvDrawRank">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@color/text_sub</item>
    </style>

    <style name="ScoreGroupTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ScoreGroupText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#3c3c3c</item>
    </style>

    <style name="TvMatchFinalSeed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IvPadActionIcon">
        <item name="android:layout_width">@dimen/actionbar_height</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:padding">@dimen/actionbar_icon_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TvRecordPadAddTitle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IconRecordPadAdd">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/ic_add_white_36dp</item>
    </style>

    <style name="GroupWhiteSecItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/gdb_record_line_height</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>